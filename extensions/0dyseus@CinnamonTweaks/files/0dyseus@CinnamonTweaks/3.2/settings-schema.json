{
    "layout": {
        "type": "layout",
        "pages": [
            "page_01",
            "page_02"
        ],

        "page_01": {
            "type": "page",
            "title": "Page 1",
            "sections": [
                "section_restart_cinnamon",
                "section_applets_tweaks",
                "section_desklets_tweaks"
            ]
        },
        "page_02": {
            "type": "page",
            "title": "Page 2",
            "sections": [
                "section_restart_cinnamon",
                "section_notifications_tweaks",
                "section_win_focus_tweaks",
                "section_tooltips_tweaks",
                "section_desktop_tweaks",
                "section_popups_tweaks"
            ]
        },

        "section_applets_tweaks": {
            "type": "section",
            "title": "Applets tweaks",
            "keys": [
                "pref_applets_tweaks_enabled",
                "pref_applets_ask_confirmation_applet_removal",
                "pref_applets_add_open_folder_item_to_context",
                "pref_applets_add_open_folder_item_to_context_placement",
                "pref_applets_add_edit_file_item_to_context",
                "pref_applets_add_edit_file_item_to_context_placement"
            ]
        },
        "section_desklets_tweaks": {
            "type": "section",
            "title": "Desklets tweaks",
            "keys": [
                "pref_desklets_tweaks_enabled",
                "pref_desklets_ask_confirmation_desklet_removal",
                "pref_desklets_add_open_folder_item_to_context",
                "pref_desklets_add_open_folder_item_to_context_placement",
                "pref_desklets_add_edit_file_item_to_context",
                "pref_desklets_add_edit_file_item_to_context_placement"
            ]
        },
        "section_notifications_tweaks": {
            "type": "section",
            "title": "Notifications tweaks",
            "keys": [
                "pref_notifications_enable_tweaks",
                "pref_notifications_enable_animation",
                "pref_notifications_position",
                "pref_notifications_distance_from_panel",
                "pref_notifications_right_margin"
            ]
        },
        "section_win_focus_tweaks": {
            "type": "section",
            "title": "Window Focus tweaks",
            "keys": [
                "pref_win_demands_attention_activation_mode",
                "pref_win_demands_attention_keyboard_shortcut"
            ]
        },
        "section_tooltips_tweaks": {
            "type": "section",
            "title": "Tooltips tweaks",
            "keys": [
                "pref_tooltips_tweaks_enabled",
                "pref_tooltips_delay"
            ]
        },
        "section_desktop_tweaks": {
            "type": "section",
            "title": "Desktop tweaks",
            "keys": [
                "pref_desktop_tweaks_enabled",
                "pref_desktop_tweaks_allow_drop_to_desktop"
            ]
        },
        "section_popups_tweaks": {
            "type": "section",
            "title": "Popup menus tweaks",
            "keys": [
                "pref_popup_menu_manager_tweaks_enabled",
                "pref_popup_menu_manager_applets_menus_behavior"
            ]
        },

        "section_restart_cinnamon": {
            "type": "section",
            "title": "After changing any option marked with asterisks (*), Cinnamon needs to be restarted.",
            "keys": [
                "restart_cinnamon_button"
            ]
        }
    },
    "pref_applets_tweaks_enabled": {
        "type": "switch",
        "default": false,
        "description": "Enable Applets tweaks"
    },
    "pref_applets_ask_confirmation_applet_removal": {
        "type": "switch",
        "dependency": "pref_applets_tweaks_enabled",
        "default": false,
        "description": "Ask for confirmation on applet removal",
        "tooltip": "Display a confirmation dialog on removal.\nKeeping the Ctrl key pressed will bypass the confirmation."
    },
    "pref_applets_add_open_folder_item_to_context": {
        "type": "switch",
        "dependency": "pref_applets_tweaks_enabled",
        "default": false,
        "description": "(*) Display \"Open applet folder\" on context menu for applets"
    },
    "pref_applets_add_open_folder_item_to_context_placement": {
        "type": "combobox",
        "dependency": "pref_applets_tweaks_enabled",
        "default": 3,
        "description": "(*) Where to place the menu item?",
        "options": {
            "Last item on menu": 0,
            "Before \"About...\" item": 3,
            "Before \"Configure...\" item": 2,
            "Before \"Remove...\" item": 1
        }
    },
    "pref_applets_add_edit_file_item_to_context": {
        "type": "switch",
        "dependency": "pref_applets_tweaks_enabled",
        "default": false,
        "description": "(*) Display \"Edit applet main file\" on context menu for applets"
    },
    "pref_applets_add_edit_file_item_to_context_placement": {
        "type": "combobox",
        "dependency": "pref_applets_tweaks_enabled",
        "default": 3,
        "description": "(*) Where to place the menu item?",
        "options": {
            "Last item on menu": 0,
            "Before \"About...\" item": 3,
            "Before \"Configure...\" item": 2,
            "Before \"Remove...\" item": 1
        }
    },
    "pref_desklets_tweaks_enabled": {
        "type": "switch",
        "default": false,
        "description": "Enable Desklets tweaks"
    },
    "pref_desklets_ask_confirmation_desklet_removal": {
        "type": "switch",
        "dependency": "pref_desklets_tweaks_enabled",
        "default": false,
        "description": "Ask for confirmation on desklet removal",
        "tooltip": "Display a confirmation dialog on removal.\nKeeping the Ctrl key pressed will bypass the confirmation."
    },

    "pref_desklets_add_open_folder_item_to_context": {
        "type": "switch",
        "dependency": "pref_desklets_tweaks_enabled",
        "default": false,
        "description": "(*) Display \"Open desklet folder\" on context menu for desklets"
    },
    "pref_desklets_add_open_folder_item_to_context_placement": {
        "type": "combobox",
        "dependency": "pref_desklets_tweaks_enabled",
        "default": 3,
        "description": "(*) Where to place the menu item?",
        "options": {
            "Last item on menu": 0,
            "Before \"About...\" item": 3,
            "Before \"Configure...\" item": 2,
            "Before \"Remove...\" item": 1
        }
    },
    "pref_desklets_add_edit_file_item_to_context": {
        "type": "switch",
        "dependency": "pref_desklets_tweaks_enabled",
        "default": false,
        "description": "(*) Display \"Edit desklet main file\" on context menu for desklets"
    },
    "pref_desklets_add_edit_file_item_to_context_placement": {
        "type": "combobox",
        "dependency": "pref_desklets_tweaks_enabled",
        "default": 3,
        "description": "(*) Where to place the menu item?",
        "options": {
            "Last item on menu": 0,
            "Before \"About...\" item": 3,
            "Before \"Configure...\" item": 2,
            "Before \"Remove...\" item": 1
        }
    },
    "pref_notifications_enable_tweaks": {
        "type": "switch",
        "default": false,
        "description": "Enable notifications tweaks",
        "tooltip": ""
    },
    "pref_notifications_enable_animation": {
        "type": "switch",
        "dependency": "pref_notifications_enable_tweaks",
        "default": false,
        "description": "Enable notifications open/close animation",
        "tooltip": ""
    },
    "pref_notifications_position": {
        "type": "combobox",
        "dependency": "pref_notifications_enable_tweaks",
        "default": false,
        "description": "Notifications position",
        "options": {
            "Top-right of screen (System default)": false,
            "Bottom-right of screen": true
        }
    },
    "pref_notifications_distance_from_panel": {
        "type": "spinbutton",
        "dependency": "pref_notifications_enable_tweaks",
        "default": 15,
        "min": 0,
        "max": 512,
        "step": 1,
        "units": "pixels",
        "description": "Distance from panel",
        "tooltip": "For notifications displayed at the top-right of screen: this is the distance between the bottom border of the top panel (if no top panel, from the top of the screen) to the top border of the notification popup.\nFor notifications displayed at the bottom-right of screen: this is the distance between the top border of the bottom panel (if no bottom panel, from the bottom of the screen) to the bottom border of the notification popup."
    },
    "pref_notifications_right_margin": {
        "type": "spinbutton",
        "dependency": "pref_notifications_enable_tweaks",
        "default": 0,
        "min": 0,
        "max": 512,
        "step": 1,
        "units": "pixels",
        "description": "Notification popup right margin",
        "tooltip": "By default, the right margin of the notification popup is defined by the currently used theme. This option, set to any value other than 0 (zero), allows to set a custom right margin, ignoring the defined by the theme."
    },
    "pref_win_demands_attention_activation_mode": {
        "type": "combobox",
        "default": "none",
        "description": "The activation of windows demanding attention...",
        "options": {
            "...is handled by the system": "none",
            "...is immediate": "force",
            "...is performed with a keyboard shortcut": "hotkey"
        }
    },
    "pref_win_demands_attention_keyboard_shortcut": {
        "type": "keybinding",
        "description": "Keyboard shortcut: ",
        "default": ""
    },
    "pref_tooltips_tweaks_enabled": {
        "type": "switch",
        "default": false,
        "description": "Enable Tooltips tweaks",
        "tooltip": "These tweaks affect only Cinnamon's UI tooltips."
    },
    "pref_tooltips_delay": {
        "type": "spinbutton",
        "dependency": "pref_tooltips_tweaks_enabled",
        "default": 300,
        "min": 100,
        "max": 1000,
        "step": 50,
        "units": "milliseconds",
        "description": "(*) Tooltips show delay",
        "tooltip": "Set a delay in milliseconds to display Cinnamon's UI tooltips."
    },
    "pref_desktop_tweaks_enabled": {
        "type": "checkbox",
        "default": false,
        "description": "Enable Desktop tweaks"
    },
    "pref_desktop_tweaks_allow_drop_to_desktop": {
        "type": "checkbox",
        "dependency": "pref_desktop_tweaks_enabled",
        "default": false,
        "description": "(*) Enable applications drop to the Desktop",
        "tooltip": "With this option enabled, applications can be dragged from the menu applet and from the panel launchers applet and dropped into the desktop."
    },
    "pref_popup_menu_manager_tweaks_enabled": {
        "type": "switch",
        "default": false,
        "description": "Enable Popup menus tweaks"
    },
    "pref_popup_menu_manager_applets_menus_behavior": {
        "type": "combobox",
        "dependency": "pref_popup_menu_manager_tweaks_enabled",
        "default": 0,
        "description": "(*) Panel menus behavior",
        "options": {
            "Default behavior": 0,
            "Emulate Gnome Shell menus": 1,
            "Don't \"eat\" clicks": 2
        },
        "tooltip": "This setting affects only the behavior of menus that belongs to applets placed on any panel.\nEmulate Gnome Shell behavior: When a menu is open on Genome Shell, and then the mouse cursor is moved to another button on the top panel, the menu of the hovered buttons will automatically open without the need to click on them. With this option enabled, that same behavior can be reproduced on Cinnamon.\nDon't eat clicks: By default, when one opens an applet's menu on Cinnamon and then click on another applet to open its menu, the first click is used to close the first opened menu, and then another click has to be performed to open the menu of the second applet. With this option enabled, one can directly open the menu of any applet even if another applet has its menu open."
    },
    "restart_cinnamon_button": {
        "type": "button",
        "description": "Restart Cinnamon",
        "callback": "restartCinnamon"
    },
    "pref_initial_load": {
        "type": "generic",
        "default": false
    }
}
