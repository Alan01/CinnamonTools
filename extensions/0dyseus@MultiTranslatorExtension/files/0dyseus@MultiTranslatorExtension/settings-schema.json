{
    "pref_enable_shortcuts": {
        "type": "checkbox",
        "default": true,
        "description": "Enable shortcuts"
    },
    "pref_open_translator_dialog_keybinding": {
        "type": "keybinding",
        "indent": true,
        "default": "<Super>T",
        "description": "Translate hotkey",
        "tooltip": "Open translator dialog hotkey."
    },
    "pref_translate_from_clipboard_keybinding": {
        "type": "keybinding",
        "indent": true,
        "default": "<Super><Shift>T",
        "description": "Translate text from clipboard hotkey",
        "tooltip": "Open translator dialog and translate text from clipboard hotkey."
    },
    "pref_translate_from_selection_keybinding": {
        "type": "keybinding",
        "indent": true,
        "default": "<Super><Alt>T",
        "description": "Translate from selection hotkey",
        "tooltip": "Open translator dialog and translate from primary selection hotkey."
    },
    "pref_sync_entries_scrolling": {
        "type": "checkbox",
        "default": true,
        "description": "Synchronize scroll entries"
    },
    "pref_default_translator": {
        "type": "combobox",
        "default": "Google.Translate",
        "description": "Display method for information about applications:",
        "options": {
            "Google Translate": "Google.Translate",
            "Yandex Translate": "Yandex.Translate"
        }
    },
    "pref_translators_prefs": {
        "type": "generic",
        "default": {
            "Google.Translate": {
                "default_source": "auto",
                "default_target": "en",
                "last_source": "",
                "last_target": "",
                "remember_last_lang": true
            },
            "Yandex.Translate": {
                "default_source": "auto",
                "default_target": "en",
                "last_source": "",
                "last_target": "",
                "remember_last_lang": true
            }
        }
    },
    "pref_remember_last_translator": {
        "type": "checkbox",
        "default": true,
        "description": "Remember last translator"
    },
    "pref_last_translator": {
        "type": "generic",
        "default": ""
    },
    "pref_width_percents": {
        "type": "spinbutton",
        "default": 80,
        "min": 20,
        "max": 100,
        "step": 5,
        "units": "percent",
        "description": "Percentage of screen width"
    },
    "pref_height_percents": {
        "type": "spinbutton",
        "default": 60,
        "min": 20,
        "max": 100,
        "step": 5,
        "units": "percent",
        "description": "Percentage of screen height"
    },
    "pref_font_size": {
        "type": "spinbutton",
        "default": 15,
        "min": 8,
        "max": 32,
        "step": 1,
        "units": "pixel",
        "description": "Font size"
    },
    "pref_languages_stats": {
        "type": "generic",
        "default": "{}"
    },
    "pref_show_most_used": {
        "type": "checkbox",
        "default": true,
        "description": "Show most used languages"
    },
    "pref_dialog_theme": {
        "type": "combobox",
        "default": "default",
        "description": "Dialog theme",
        "options": {
            "Default (Linux Mint)": "default",
            "Gnome-shell": "Gnome-shell",
            "Mint-X": "Mint-X",
            "Mint-X-Aqua": "Mint-X-Aqua",
            "Mint-X-Blue": "Mint-X-Blue",
            "Mint-X-Brown": "Mint-X-Brown",
            "Mint-X-Greybird-Blue": "Mint-X-Greybird-Blue",
            "Mint-X-Orange": "Mint-X-Orange",
            "Mint-X-Pink": "Mint-X-Pink",
            "Mint-X-Purple": "Mint-X-Purple",
            "Mint-X-Red": "Mint-X-Red",
            "Mint-X-Sand": "Mint-X-Sand",
            "Mint-X-Teal": "Mint-X-Teal"
        }
    },
    "sep3": {
        "type": "separator"
    },
    "head3": {
        "type": "header",
        "description": "Translation history settings"
    },
    "pref_history_timestamp": {
        "type": "combobox",
        "indent": true,
        "default": 0,
        "description": "Timestamp for translation history entries",
        "options": {
            "Custom": 0,
            "YYYY MM-DD hh:mm:ss (ISO8601)": 1,
            "YYYY DD-MM hh:mm:ss (European)": 2
        }
    },
    "pref_history_timestamp_custom": {
        "type": "entry",
        "indent": true,
        "default": "YYYY-MM-DD hh:mm:ss",
        "description": "Custom timestamp",
        "tooltip": "Choose a custom timestamp for the translation history entries.\nYYYY: year\nMM: month\nDD: day\nhh: hours\nmm: minutes\nss: seconds"
    },
    "pref_history_initial_window_width": {
        "type": "spinbutton",
        "indent": true,
        "default": 800,
        "min": 400,
        "max": 2048,
        "step": 50,
        "units": "pixels",
        "description": "History window initial width"
    },
    "pref_history_initial_window_height": {
        "type": "spinbutton",
        "indent": true,
        "default": 600,
        "min": 400,
        "max": 2048,
        "step": 50,
        "units": "pixels",
        "description": "History window initial height"
    },
    "pref_history_width_to_trigger_word_wrap": {
        "type": "spinbutton",
        "indent": true,
        "default": 300,
        "min": 100,
        "max": 1024,
        "step": 10,
        "units": "pixels",
        "description": "Width to trigger word wrap",
        "tooltip": "The \"Source text\" and \"Target text\" columns on the history window will wrap its text at the width defined by this setting."
    },
    "sep4": {
        "type": "separator"
    },
    "head4": {
        "type": "header",
        "description": "Yandex translator settings"
    },
    "pref_yandex_api_keys": {
        "type": "textview",
        "description": "API keys",
        "default": "",
        "tooltip": "Enter one API key per line.\nRead the help file found inside this extension folder to know how to get free Yandex API keys.",
        "height": 150
    },
    "sep5": {
        "type": "separator"
    },
    "head5": {
        "type": "header",
        "description": "Debugging settings"
    },
    "label5": {
        "type": "label",
        "description": "(*) This options are only useful for the extension developer"
    },
    "pref_loggin_enabled": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Enable logging",
        "tooltip": "It enables the ability to log the output of several functions used by the extension."
    },
    "pref_loggin_save_history_indented": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Indent translation history data",
        "tooltip": "It allows to save the translation history data with indentation."
    }
}
